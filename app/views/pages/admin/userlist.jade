extends ../../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 邮箱
						th 年龄
						th 密码
						th 选项
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td #{item.name}
							td #{item.email}
							td #{item.age}
							td #{item.password}
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
	script(src="/js/admin.js")