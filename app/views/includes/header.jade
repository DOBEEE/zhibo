nav.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			a.navbar-brand(href="/")小学僧
		p.navbar-text.navbar-right
			if (user)
				a.navbar-link(href="/user") #{user.name}
				span &nbsp;|&nbsp;
				a.navbar-link(href="/logout")登出
			else
				a.navbar-link(href="#",data-toggle="modal",data-target="#loginModal")登陆
				span &nbsp;|&nbsp;
				a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal")注册
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/signup")
				.modal-header 注册
				.modal-body
					.form-group
						label(for="name") username
						input(type="text" ,name="user[name]" ,class="form-control" ,id="name" ,placeholder="username")
					.form-group
						label(for="password") password
						input(type="password" ,name="user[password]" ,class="form-control" ,id="password" ,placeholder="password")
					.form-group
						label(for="age") age
						input(type="text" ,name="user[age]" ,class="form-control" ,id="age" ,placeholder="age")
					.form-group
						label(for="email") Email
						input(type="email" ,name="user[email]" ,class="form-control" ,id="email" ,placeholder="email")
				.modal-footer
					button.btn.btn-default.btn-primary(type="submit") 提交
					button.btn.btn-default(type="submit" ,data-dismiss="modal") 关闭
#loginModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/login")
				.modal-header 登陆
				.modal-body
					.form-group
						label(for="email") email
						input(type="text" ,name="user[email]" ,class="form-control" ,id="email",placeholder="email")
					.form-group
						label(for="password") password
						input(type="password" ,name="user[password]" ,class="form-control" ,id="password" ,placeholder="password")
				.modal-footer
					button.btn.btn-default.btn-primary(type="submit") 提交
					button.btn.btn-default(type="submit" ,data-dismiss="modal") 关闭